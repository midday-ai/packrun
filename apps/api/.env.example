# API Server Configuration
PORT=3001

# Typesense (required for search)
TYPESENSE_HOST=your-cluster.a1.typesense.net
TYPESENSE_API_KEY=your-api-key
TYPESENSE_PROTOCOL=https
TYPESENSE_COLLECTION=packages

# Redis (for queue)
REDIS_URL=redis://localhost:6379

# GitHub API (optional, for enriched data)
GITHUB_TOKEN=ghp_xxx

# Database (PostgreSQL for auth)
DATABASE_URL=postgresql://user:password@localhost:5432/v1run

# Better Auth
BETTER_AUTH_SECRET=your-secret-key  # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3001

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitHub token for API calls
GITHUB_TOKEN=

# npm token (optional, increases rate limits for authenticated requests)
# Create at: https://www.npmjs.com/settings/YOUR_USERNAME/tokens
# Any valid npm token works - no package scopes needed for public package data
# Read-only token is sufficient (no write permissions required)
NPM_TOKEN=

# ================================
# Notifications
# ================================

# Email notifications (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx

# Unsubscribe token signing secret
# Generate with: openssl rand -base64 32
UNSUBSCRIBE_SECRET=your-secret-key

# Slack integration (optional)
# Create a Slack App at: https://api.slack.com/apps
# Required scopes: chat:write, channels:read, groups:read
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=