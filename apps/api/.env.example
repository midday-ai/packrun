# API Server Configuration
PORT=3001

# Typesense (required for search)
TYPESENSE_HOST=your-cluster.a1.typesense.net
TYPESENSE_API_KEY=your-api-key
TYPESENSE_PROTOCOL=https
TYPESENSE_COLLECTION=packages

# Redis (for queue)
REDIS_URL=redis://localhost:6379

# GitHub API (optional, for enriched data)
GITHUB_TOKEN=ghp_xxx

# Database (PostgreSQL for auth)
DATABASE_URL=postgresql://user:password@localhost:5432/v1run

# Better Auth
BETTER_AUTH_SECRET=your-secret-key  # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3001

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret