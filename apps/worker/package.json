{
  "name": "worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:listener": "bun run --watch src/index.ts",
    "dev:worker": "bun run --watch src/worker.ts",
    "start:listener": "bun run src/index.ts",
    "start:worker": "bun run src/worker.ts",
    "sync:test": "bun run src/test-sync.ts",
    "sync:bulk": "bun run src/bulk-sync.ts",
    "sync:priority": "bun run src/priority-sync.ts",
    "sync:phase1": "bun run src/priority-sync.ts 1",
    "sync:phase2": "bun run src/priority-sync.ts 2",
    "sync:phase3": "bun run src/priority-sync.ts 3",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@packrun/data": "workspace:*",
    "@packrun/db": "workspace:*",
    "@packrun/decisions": "workspace:*",
    "@packrun/email": "workspace:*",
    "@packrun/logger": "workspace:*",
    "@packrun/queue": "workspace:*",
    "ioredis": "^5.6.1",
    "semver": "^7.6.3",
    "typesense": "^2.1.0"
  },
  "devDependencies": {
    "@packrun/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "typescript": "^5.9.3"
  }
}
