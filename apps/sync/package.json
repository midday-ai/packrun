{
  "name": "sync",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js",
    "sync": "bun run src/index.ts",
    "sync:bulk": "bun run src/bulk-sync.ts",
    "sync:test": "bun run src/test-sync.ts",
    "sync:priority": "bun run src/priority-sync.ts",
    "sync:phase1": "bun run src/priority-sync.ts 1",
    "sync:phase2": "bun run src/priority-sync.ts 2",
    "sync:phase3": "bun run src/priority-sync.ts 3",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "typesense": "^2.1.0"
  },
  "devDependencies": {
    "@v1/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
